{
  "name": "ussf-portal-cms",
  "version": "1.4.7",
  "private": true,
  "repository": {
    "type": "git",
    "url": "github:USSF-ORBIT/ussf-portal-cms"
  },
  "scripts": {
    "services:removeall": "docker ps --quiet --all | xargs docker rm --force",
    "services:up": "docker compose up -d",
    "services:down": "docker compose down",
    "dev": "node -r ./startup/index.js node_modules/.bin/keystone dev",
    "start": "node -r ./startup/index.js node_modules/.bin/keystone start",
    "build": "keystone build",
    "postinstall": "keystone postinstall",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "jest --runInBand --testTimeout=60000",
    "test:watch": "jest --watch --runInBand --testTimeout=60000",
    "release": "standard-version -t ''"
  },
  "dependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@graphql-tools/schema": "9.0.9",
    "@k6-contrib/list-plugins": "3.0.0",
    "@keystone-6/auth": "5.0.0",
    "@keystone-6/core": "3.0.2",
    "@keystone-6/fields-document": "5.0.1",
    "@prisma/client": "4.6.1",
    "cookie-signature": "1.2.0",
    "dotenv": "16.0.1",
    "pino": "8.4.0",
    "react": "18.2.0",
    "redis": "4.2.0",
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@babel/preset-react": "7.18.6",
    "@types/cookie": "0.5.1",
    "@types/cookie-signature": "1.0.4",
    "@types/jest": "29.2.1",
    "@types/react": "18.0.24",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "babel-jest": "28.1.3",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.5.0",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "standard-version": "9.5.0"
  },
  "engines": {
    "node": "18.12.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": true
    },
    "types": [
      {
        "type": "build",
        "hidden": true
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "ci",
        "hidden": true
      },
      {
        "type": "dev",
        "hidden": true
      },
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "Reverted Changes"
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "security",
        "section": "Security Improvements"
      }
    ]
  }
}
